<div class="login">
  <div class="error-msg">
    <% if flash[:error] %>
        <div class="alert alert-danger alert-dismissible" role="alert">
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
          <%= flash[:error] %>
        </div>
    <% elsif flash[:notice] %>
        <div class="alert alert-success alert-dismissible" role="alert">
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
          <%= flash[:notice] %>
        </div>
    <% elsif flash[:resend] %>
        <div class="alert alert-success alert-dismissible" role="alert">
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
          <%= flash[:resend] %> <a class="alert-link">resend it</a>
          <div id="resend-link" class="txt-fld-group">
            <input type="text" id="txt-fld"/>
            <button id="btn2">Resend Activation Link</button>
          </div>
        </div>
    <% end %>
  </div>

  <h3><strong>Sign In</strong></h3>
  
<%= form_tag("/account/login", method: "post", id: "login-form") do %>
  <div class="imgcontainer">
    <%= image_tag "mountain_hill.jpg", :class => "avatar" %>
  </div>

  <div>
    <%= label_tag(:login, "Username") %>
    <input id="login-txt" type="text" name="login">
    <span id="f1" class="txt-field">Username is empty</span>

    <%= label_tag(:password, "Password") %>
    <input id="pwd-txt" type="password" name="password">
    <span id="f2" class="txt-field">Password is empty</span>

    <%= submit_tag("Sign In", :id => "btn", :name => "submit") %>
    <span id="rme"><%= check_box_tag(:remember_me)%> Remember Me</span>
  </div>
  <% end %>

    <span id="frgt"><%= link_to 'Forgot your password? ', account_password_reset_path %> </span>

  <footer id="footer">
    <li>Not a member yet?<%= link_to 'Sign up now', account_signup_path %></li>
    <li><%= link_to 'Back to Home Page', root_path %></li>
  </footer>

</div>