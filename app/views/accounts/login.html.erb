<div class = "login">
  <% if flash[:error] %>
    <div class="alert alert-danger alert-dismissible" role="alert">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      <%= flash[:error] %>
    </div>
  <% elsif flash[:notice] %>
    <div class="alert alert-success alert-dismissible" role="alert">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      <%= flash[:notice] %>
    </div>
  <% elsif flash[:resend] %>
    <div class="alert alert-success alert-dismissible" role="alert">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      <%= sanitize(flash[:resend]) %> <a href="/account/resend_activation" class="alert-link">resend it</a>
    </div>
  <% end %>

<h1>Login</h1>

<%= form_tag("/account/login", method: "post") do %>
  <p>
    <%= label_tag(:login, "Username:") %>
    <%= text_field_tag(:login) %>
  </p>
  <p>
    <%= label_tag(:password, "Password:") %>
    <%= password_field_tag(:password) %>
  </p>
   <p>
    <%= submit_tag("Log In") %>
   </p>
<% end %>
<div id="signup_msg">Not a member yet? Please <%= link_to 'Sign Up', account_signup_path %></div>

<div><%= link_to 'Forgot password? Click here to reset your password.', account_password_reset_path %></div>

<%= link_to 'Back to Home Page',root_path %>
</div>

