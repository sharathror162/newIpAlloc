<div class = "error-msg">
  <% if flash[:error] %>
    <div class="alert alert-danger alert-dismissible" role="alert">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
      <%= flash[:error] %>
    </div>
  <% elsif flash[:notice] %>
    <div class="alert alert-success alert-dismissible" role="alert">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
      <%= flash[:notice] %>
    </div>
  <% elsif flash[:resend] %>
    <div class="alert alert-success alert-dismissible" role="alert">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
      <%= flash[:resend] %> <a class="alert-link">resend it</a>
      <div id="resend-link" class="txt-fld-group">
        <input type="text" id="txt-fld"/>
        <button id="btn2">Resend Activation Link</button>
      </div>
    </div>
  <% end %>
</div>

<div class = "login">

  <h3><strong>Sign In</strong></h3>

<%= form_tag("/account/login", method: "post") do %>
  <div class="imgcontainer">
    <%= image_tag "mountain_hill.jpg", :class => "avatar" %>
  </div>

  <div>
    <%= label_tag(:login, "Username") %>
    <%= text_field_tag(:login) %>


    <%= label_tag(:password, "Password") %>
    <%= password_field_tag(:password) %>

    <%= submit_tag("Sign In", :id=>"btn", :name=>"submit") %>
  </div>
<% end %>

  <div class="container">
    <span class="psw">
      <div>
        <%= link_to 'Forgot your password? Click here to reset it now', account_password_reset_path %>
      </div>
      <div id="signup_msg">
        Not a member yet? <%= link_to 'Sign up now', account_signup_path %>
      </div>
      <%= link_to 'Home',root_path %>
    </span>
  </div>

</div>